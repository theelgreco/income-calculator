{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */
        "target": "es2016",
        "module": "commonjs",
        "paths": {
            "@api-contract": ["./api-contract"],
            "@api-contract/*": ["./api-contract/*"],
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/types/express/*.d.ts", "api-contract/**/*", "prisma/**/*"]
}
